- project = local_assigns.fetch(:project)
- sort_value = @sort
- sorted_title = sort_options_hash[sort_value]

.dropdown.inline.prepend-left-10
  .btn-group{ role: 'group' }
    .btn-group{ role: 'group' }
      %button.dropdown-menu-toggle{ type: 'button', data: { toggle: 'dropdown', display: 'static' }, class: 'btn btn-default' }
        = sorted_title
        = icon('chevron-down')
      %ul.dropdown-menu.dropdown-menu-right.dropdown-menu-selectable.dropdown-menu-sort
        %li
          = sortable_item(sort_title_created_date, page_filter_path(sort: sort_value_created_date, label: true), sorted_title)
          = sortable_item(sort_title_expire_date,  page_filter_path(sort: sort_value_expire_date,  label: true), sorted_title)
          = sortable_item(sort_title_size,         page_filter_path(sort: sort_value_size,         label: true), sorted_title)
    - reverse_sort = issuable_reverse_sort_order_hash[sort_value]
    - reverse_url = page_filter_path(sort: reverse_sort)
    = sort_direction_button(reverse_url, reverse_sort,  sort_value)
