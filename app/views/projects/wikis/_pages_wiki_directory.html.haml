- presenter = wiki_dir.present
%li
  %span.text-secondary-500.svg-icon.svg-baseline
    = sprite_icon(presenter.end_of_chain.icon(@show_children), size: 16)

  - if @show_children
    = link_to wiki_dir.title, project_wiki_dir_path(@project, wiki_dir)
    %ul
      = render wiki_dir.pages, context: context
  - else
    - presenter.chain.each_with_index do |elem, i|
      = link_to elem.title, elem.link_path(@project)
      - if i + 1 == presenter.chain.size
        - if elem.page_count > 1
          %span.badge.badge-pill.wiki-dir-page-count= wiki_dir.page_count
        .float-right
          %small= (s_("Last edited %{date}") % { date: time_ago_with_tooltip(elem.last_version.authored_date) }).html_safe
      - else
        %span.wiki-page-name-separator= _('/')

