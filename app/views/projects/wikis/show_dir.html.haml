
- @no_container = true
- add_to_breadcrumbs _("Wiki"), project_wiki_path(@project, :home)
- add_to_breadcrumbs s_("Wiki|Pages"), project_wikis_pages_path(@project)
- breadcrumb_title s_(@wiki_dir.slug)
- page_title @wiki_dir.slug
- sort_title = wiki_sort_title(params[:sort])

%div{ class: container_class }
  .wiki-page-header

    .nav-text.flex-fill
      %h2.wiki-page-title
        = s_(@wiki_dir.slug)

    .nav-controls
      - if can?(current_user, :create_wiki, @project)
        = link_to '#modal-new-wiki', class: "add-new-wiki btn btn-success", "data-toggle" => "modal" do
          = s_("Wiki|New page")

      = link_to project_wikis_git_access_path(@project), class: 'btn' do
        = icon('cloud-download')
        = _("Clone repository")

      .dropdown.inline.wiki-sort-dropdown
        .btn-group{ role: 'group' }
          .btn-group{ role: 'group' }
            %button.dropdown-toggle{ type: 'button', data: { toggle: 'dropdown', display: 'static' }, class: 'btn btn-default' }
              = sort_title
              = icon('chevron-down')
            %ul.dropdown-menu.dropdown-menu-right.dropdown-menu-selectable.dropdown-menu-sort
              %li
                = sortable_item(s_("Wiki|Title"), project_wiki_dir_path(@project, @wiki_dir, sort: ProjectWiki::TITLE_ORDER), sort_title)
                = sortable_item(s_("Wiki|Created date"), project_wiki_dir_path(@project, @wiki_dir, sort: ProjectWiki::CREATED_AT_ORDER), sort_title)
          = wiki_sort_controls(params[:sort], params[:direction]) { |opts| project_wiki_dir_path(@project, @wiki_dir, opts) }

  %ul.wiki-pages-list.content-list
    = render @wiki_entries, context: 'pages'

  = paginate @wiki_pages, theme: 'gitlab'

= render 'projects/wikis/new'
